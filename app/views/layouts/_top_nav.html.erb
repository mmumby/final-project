<div class="navbar navbar-inverse navbar-fixed-top opaque-navbar nav-container">

    <div class="collapse navbar-collapse nav-content navbar-container" id="navMain">

      <div class="navigation-div">
        <ul class="nav navbar-nav">
          <% if current_user %>
            <li class="nav-text"><a href="/posts?order=available" id='nav-white'>Home</a></li>
          <% end %>
        </ul>
      </div><!-- /navigation-div -->

      <div class="navbar-header navbar-title">
        <a id="navbar-header" class="text-center center-block" href="/"> Lettuce Share </a>
      </div>

      <div class="user-profile-div">
        <ul class="nav navbar-nav pull-right">
        <% unless current_user %>
        <li class="dropdown">
          <a href="#" id="dropdpwn-login" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Login<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Login", user_session_path, method: :create %></li>
              <li><%= link_to "Register", new_user_registration_path, method: :get %></li>
            </ul>
        </li>
        <% else %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" id="nav-white" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", controller: :users, action: :show, id: current_user.id %></li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
          <%= link_to controller: :users, action: :show, id: current_user.id do %>
          <%= image_tag current_user[:image] ? current_user[:image] : '', :class =>"img-circle"%>
          <% end %>
        <% end %>
        </ul>
      </div><!-- /user-profile-div -->

    </div><!-- /collapse navbar-collapse nav-container -->

