<!-- show page for login form -->
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
<div>
  <div class="register-page">
    <img id="brand-logo" src="/images/lettuce-logo.png" alt="radish">
  </div>
</div>

    <div class="modal-dialog form-overlay">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel">Login</h4>
        </div>

        <div class="modal-body">
          <div class="row">
            <div class="col-sm-12 col-md-12">
              <div class="panel ">
                <div class="panel-body">
                  <form accept-charset="UTF-8" action="" method="POST">

                    <div class="row">

                      <% flash.each do |name, msg| -%>
                        <%= content_tag :div, msg, class: name, id: 'alert' %>
                      <% end -%>

                      <%= link_to " Sign in with Facebook", user_facebook_omniauth_authorize_path, :class=>"btn btn-block btn-social btn-facebook fa fa-facebook testBox log-btn" %>
                      <%= link_to " Sign in with Twitter", user_twitter_omniauth_authorize_path, :class=>"btn btn-block btn-social btn-twitter fa fa-twitter testBox log-btn" %>

                      <div class="text-center">
                        <%= f.label "Or", :class=>"testBox" %>
                      </div>

                      <%= f.email_field :email, autofocus: true, :placeholder=>"Email", :class=>"form-control testBox" %>

                      <%= f.password_field :password, autocomplete: "off", :placeholder=>"Password", :class=>"form-control testBox" %>

                      <div class="login-container">
                        <div class="testBox login-checkbox">
                          <%= f.submit "Log in", :class=>"btn btn-info" %>

                          <% if devise_mapping.rememberable? -%>
                            <div class="remember-me">
                              <%= f.check_box :remember_me %>
                              <%= f.label :remember_me %>
                            </div>
                          <% end -%>
                        </div>
                          <%= link_to "Forgot your password?", new_password_path(resource_name), :class=>"forgot" %>
                      </div>

                      <div class="newhere">
                        <%= link_to "New here? Sign up!", new_registration_path(resource_name) %>
                      </div>

                    </div><!-- /row -->

                  </form>
                </div><!-- /panel-body -->
              </div><!-- /panel -->
            </div><!-- /col-sm-12 col-md-12 -->
          </div><!-- /row -->
        </div><!-- /modal-body -->

      </div><!-- /modal-content -->
    </div><!-- /modal-dialog -->

<% end %>