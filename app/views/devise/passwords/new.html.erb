<!-- show page to request email if password is forgotten -->
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="form-section">
  </div>

  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
  <div class="register-page">
    <img id="brand-logo" src="/images/lettuce-logo.png" alt="radish">
  </div>

    <div class="modal-dialog form-overlay">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel">Forgot your password?</h4>
        </div>

        <div class="modal-body">
          <div class="row">
            <div class="col-sm-12 col-md-12">
              <div class="panel ">
                <div class="panel-body">
                  <form accept-charset="UTF-8" action="" method="POST">

                    <div class="row">
                      <%= devise_error_messages! %>
                      <%= f.email_field :email, autofocus: true, :placeholder=>"Email", :class=>"form-control testBox" %>

                      <%= f.submit "Send me reset password instructions", :class=>"btn btn-info testBox" %>

                      <div>

                        <div class="testBox">
                          <%= link_to "New here? Sign up!", new_registration_path(resource_name) %>
                        </div>
                        <div class="testBox">
                          <%= link_to "Already have an account? Log in", new_session_path(resource_name), :class=>"login-link" %>
                        </div>

                        <%= link_to " Sign in with Facebook", user_facebook_omniauth_authorize_path, :class=>"btn btn-block btn-social btn-facebook fa fa-facebook testBox log-btn" %>
                        <%= link_to " Sign in with Twitter", user_twitter_omniauth_authorize_path, :class=>"btn btn-block btn-social btn-twitter fa fa-twitter testBox log-btn" %>

                      </div>

                    </div><!-- /row -->
                  </form>
                </div><!-- /panel-body -->
             </div><!-- /panel -->
            </div><!-- /col-sm-12 col-md-12 -->
          </div><!-- /row -->
        </div><!-- /modal-body -->

      </div><!-- /modal-content -->
    </div><!-- /modal-dialog -->

<% end %>