<div id="notice"><%= notice %></div>
<ul class="nav nav-tabs">
  <li class="active"><a data-toggle="tab" href="#home">About</a></li>
<%= link_to 'Back', posts_path, class: 'btn btn-default pull-right' %>
</ul>



<div id="post-container" class="container">
  <div id="post-row" class="row vdivide">
    <div class="col-sm-6 text-center">
      <div class="modal-dialog">
        <div class="modal-content">
              <div class="thumbnail">
              <% unless @post.image.blank? %>
                <%= image_tag @post.image %>
                <% end %>
                  <p><%= @post.description %></p>
                  <% if current_user == @post.user %>
                  <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary'  %>
                  <%= link_to 'Delete', @post, :method => :delete, :confirm => "Are you sure?", class: 'btn btn-danger' %>
                  <% end %>
              </div>
            </div>
          </div>
      </div>
      <div class="col-sm-6 text-center">
         <div id="login-overlay" class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Leave a Comment</h4>
                <%= render 'comments/form' %>
              </div>
              <div class=" food-comment">
                <div>
                  <%= render 'comments/comments' %>
                </div>
            </div>
      </div>
  </div>
    </div>
  </div>
</div>




