<!-- show for /posts -->
<!-- header/ show form -->
<div class="header-section header-image">
  <div class="container">
     <div class="new-post-form">
        <%= render 'form', post: @post %>
    </div>
  </div>
</div>
<!-- display all notice/alerts here -->
<div>
  <br>
  <p id="notice"><%= notice %></p>
  <p id="alert"><%= alert %></p>
</div>

<!-- tab options for post page -->
<!-- order by options & view all categories -->
<div>
  <ul class="nav nav-tabs">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Order by<span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li><%= link_to "View All", controller: "posts", category_id: params[:category_id] %></li>
        <li><%= link_to "Available posts", controller: "posts", order: "available", category_id: params[:category_id] %></li>
      </ul>
    </li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories <span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li><%= link_to "View all", controller: "posts", order: params[:order] %></li>
        <% Category.all.each do |category| %>
        <li><%= link_to category.name, controller: "posts", category_id: category.id, order: params[:order] %>
        </li>
        <% end %>
      </ul>
    </li>
    <button type="button" id="new-post-button" class="btn btn-info pull-right">Add new post!</button>
  </ul>
</div>
<!-- render posts inside tabs -->
<div class="tab-content">
<br>
  <div id="default-post" class="tab-pane fade in active">
    <%= render 'post' %>
  </div>
</div> <!-- /tab-content -->


